{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@example-app-angular/design": [
        "dist/example-app-angular/design/example-app-angular-design",
        "dist/example-app-angular/design"
      ],
      "@mafo5/ng-design": [
        "dist/mafo5/ng-design/mafo-ng-design",
        "dist/mafo5/ng-design"
      ],
      "@mafo5/ng-ref": [
        "dist/mafo5/ng-ref/mafo-ng-ref",
        "dist/mafo5/ng-ref"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
